{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Produits finis</h1>

    <p>
        Nombre de produits à vendre : {{ stock }}<br>
        Valorisation totale : {{ valorization|number_format(2) }} €<br>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Produits</th>
                <th>Achat</th>
                <th>Vente</th>
                <th>Marge</th>
                <th class="no-print">Stock</th>
                <th class="no-print">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr {% if recipe.active == false %}class="no-print"{% endif %}>
                <th>{{ recipe.name }}</th>
                <td style="font-size: 11px;">
                    <table class="liste-ingredients">
                        {% for product in recipe.products %}
                            <tr>
                                <th>{{ product.product }}</th>
                                <td>
                                    {% if product.product.unity == 'weight' %}
                                        {{ product.quantityByRecipe|number_format(2) }}g
                                    {% else %}
                                        {{ product.quantityByRecipe|number_format() }}
                                    {% endif %}
                                </td>
                                <td>{{ product.priceByRecipe|number_format(2) }} €</td>
                            </tr>
                        {% endfor %}
                    </table>
                </td>
                <td>{{ recipe.priceOrder|number_format(2) }} €</td>
                <td>
                    <s>{{ recipe.priceProposed|number_format(2) }} €</s><br>
                    {{ recipe.price|number_format(2) }} €
                </td>
                <td>
                    {{ recipe.margin|number_format(2) }} €<br>
                    (x{{ recipe.marginCoefficient|number_format(2) }})
                </td>
                <td class="no-print">
                    {{ recipe.stock }}<br>
                    {{ recipe.valorization|number_format(2) }} €
                </td>
                <td class="no-print">
                    <a href="{{ path('recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipe_new') }}">Create new</a>
{% endblock %}
