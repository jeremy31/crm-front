{% extends 'base.html.twig' %}

{% block title %}RecipeProduct index{% endblock %}

{% block body %}
    <h1>RecipeProduct index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe_product in recipe_products %}
            <tr>
                <td>{{ recipe_product.id }}</td>
                <td>
                    <a href="{{ path('recipe_product_show', {'id': recipe_product.id}) }}">show</a>
                    <a href="{{ path('recipe_product_edit', {'id': recipe_product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipe_product_new') }}">Create new</a>
{% endblock %}
